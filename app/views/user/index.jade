html
  head
    title=title
    link(href='/css/main.css', rel='stylesheet')
  body
    h3 Hello, User: #{username}
    a(href='/profile') View Profile
    br
    a(href='/reservation') View Reservation
    div
      h3 List of restaurants.
      for res in restaurants
        a(href='/restaurant/' + res.name) #{res.name} - #{res.description}
        br
    div
      br
      form(name='logout', method='post', action='/logout')
        input(type='submit', value='Log out')
